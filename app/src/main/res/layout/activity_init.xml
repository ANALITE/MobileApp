<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/initbkg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".data.ui.InitActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_marginTop="195dp"
        android:layout_gravity="center"
        android:layout_marginLeft="17dp"
        android:background="@drawable/analitelogo"/>

    <Button
        android:id="@+id/sign_init_button"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/button_rad"
        android:text="Sign up now"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Do you already have an account?"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <Button
        android:id="@+id/login_init_button"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:background="@drawable/button_rad2"
        android:text="Log In"
        android:textColor="#000000"
        android:textSize="15sp" />


</LinearLayout>